<% include partials/header %>
<div class="ui main text container segment"> 


<div class="ui huge header"> Edit This Blog <%= blog.title %> </div>

    <!-- need to add method-override  -->
<form class="ui form" method="POST" action="/blogs/<%=blog.id%>?_method=PUT">
<div class="field">
    <label> Title </label>
    <input type="text" name= "blog[title]" value=" <%= blog.title%>">
</div>
<div class="field">
    <label> Image</label> 
    <input type="text" name= "blog[image]" value="<%= blog.image%>">
</div>
<div class="field">
    <label> Blog Content </label>
    <textarea name= "blog[content]"> <%= blog.content %> </textarea> 
</div>

<button class="ui secondary big basic button"> Submit </button>
<a href="/blogs" class="ui icon button"> <i class="arrow left icon"> </i></a>

</form>


</div>
<% include partials/footer %>