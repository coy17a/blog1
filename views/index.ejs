<% include partials/header %>
    <div class="ui container main text ">
        <div class="ui huge header">Alejo's Blog</div>
            <div class="ui top attached segment">
             <div class="ui divided items">
                <% allBlogs.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image">
                            <img src="<%= blog.image %>">
                        </div>
                        <div class="content">
                                <a class="header" href="/blogs/<%= blog.id %>">
                                    <%= blog.title %>.
                                </a>
                            
                            <div class="meta">
                                <span> Created:
                                    <%= blog.created.toDateString() %>
                                </span>
                            </div>
                            <div class="description">
                                <p>
                                    <%= blog.content.substring(0,100)%> .... </p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic button" href="/blogs/<%= blog.id %>"> More Info
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>  
                        </div>
                    </div>



                 <%});%>
            </div>
        </div>



    </div>

 <% include partials/footer %>